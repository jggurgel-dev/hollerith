<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <!-- Informações do Cadastro -->
    <TextView
        android:id="@+id/informacoesCadastro"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Matrícula: 12345 - Nome: João Silva"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/editarButton"
        android:layout_marginEnd="8dp" />

    <!-- Botão Editar -->
    <Button
        android:id="@+id/editarButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Editar"
        android:backgroundTint="@color/md_theme_light_primary"
        android:textColor="@color/md_theme_light_onPrimary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/excluirButton"
        android:layout_marginEnd="8dp" />

    <!-- Botão Excluir -->
    <Button
        android:id="@+id/excluirButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Excluir"
        android:backgroundTint="@color/md_theme_light_error"
        android:textColor="@color/md_theme_light_onError"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>