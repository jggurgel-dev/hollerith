<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:padding="16dp"
tools:context=".MainActivity">

<!-- Título Centralizado -->
<TextView
    android:id="@+id/titleTextView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Hollerith"
    android:textSize="24sp"
    android:textStyle="bold"
    android:textAlignment="center"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginTop="32dp" />

<!-- Botão Cadastro de Funcionário -->
<Button
    android:id="@+id/cadastroFuncionarioButton"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:text="Cadastro de Funcionário"
    android:backgroundTint="@color/md_theme_light_primary"
    android:textColor="@color/md_theme_light_onPrimary"
    app:layout_constraintTop_toBottomOf="@id/titleTextView"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginTop="32dp" />

<!-- Botão Cadastros Realizados -->
<Button
    android:id="@+id/cadastrosRealizadosButton"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:text="Cadastros Realizados"
    android:backgroundTint="@color/md_theme_light_primary"
    android:textColor="@color/md_theme_light_onPrimary"
    app:layout_constraintTop_toBottomOf="@id/cadastroFuncionarioButton"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginTop="16dp" />

<!-- Botão Cálculo do Salário -->
<Button
    android:id="@+id/calculoSalarioButton"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:text="Cálculo do Salário"
    android:backgroundTint="@color/md_theme_light_primary"
    android:textColor="@color/md_theme_light_onPrimary"
    app:layout_constraintTop_toBottomOf="@id/cadastrosRealizadosButton"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginTop="16dp" />

<!-- Botão Cálculos Realizados -->
<Button
    android:id="@+id/calculosRealizadosButton"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:text="Cálculos Realizados"
    android:backgroundTint="@color/md_theme_light_primary"
    android:textColor="@color/md_theme_light_onPrimary"
    app:layout_constraintTop_toBottomOf="@id/calculoSalarioButton"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginTop="16dp" />

<TextView
    android:id="@+id/footerTextView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Versão 1.0\n© AppTechers"
    android:textSize="12sp"
    android:gravity="center"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginBottom="20dp" />
</androidx.constraintlayout.widget.ConstraintLayout>